{
  "manifest_version": 3,
  "name": "LinkedIn URL Extractor",
  "description": "Search LinkedIn profiles and retrieve corresponding user data.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["src/content.js"]
    }
  ]
}
